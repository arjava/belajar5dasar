<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/colorPrimary"
    tools:context="com.arjava.limadasaran.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belajar 5 DASAR"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:id="@+id/lima_dasaran"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/btnLine"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lima_dasaran">

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/btAlphabet"
        android:text=""
        android:layout_marginRight="5dp"
        android:padding="30dp"
        android:background="@drawable/alphabet_logo"
        android:textColor="#fff"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/btAngka"
        android:layout_marginLeft="5dp"
        android:text=""
        android:padding="30dp"
        android:background="@drawable/angka_logo"
        android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLine"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btHijaiyah"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/hijaiyah_logo"
            android:text=""
            android:textColor="#fff" />

        <Button
            android:id="@+id/btWarna"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/warna_logo"
            android:text=""
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/btnLine3"
        android:gravity="center"
        android:layout_below="@+id/btnLine2">

        <Button
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:id="@+id/btBuah"
            android:layout_marginTop="5dp"
            android:text=""
            android:background="@drawable/buah_logo"
            android:textColor="#fff" />


    </LinearLayout>

    <include layout="@layout/fab_sub_menu"/>

</RelativeLayout>
